                android:layout_marginLeft="4pt"
                app:backgroundTint="@color/btnColor"
                android:onClick="btnClick"
                tools:ignore="SpeakableTextPresentCheck" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>